@import './variables.styl'

.form
    position: relative
    .title
        position: relative
        color: $colorPrimary
        font-weight: bold
        z-index 100
    .title__line
        border: 4px solid #EEEEEE
        position: absolute
        width: 300px
        bottom: -2px
    .title--big
        font-size: $fontSizeTitleBig
    .title--medium
        font-size: $fontSizeTitleMedium
    .checkbox
        float: right
.checkbox__input 
    float:right
    display: block
    margin-bottom: 15px
    margin-right: 30px
    input
        padding: 0
        height: initial
        width: initial
        margin-bottom: 0
        display: none
        cursor: pointer
        &:checked + label:after
            content: ''
            display: block
            position: absolute
            top: 4px
            left: 8px
            width: 3px
            height: 8px
            border: solid #5CE397
            border-width: 0 2px 2px 0
            transform: rotate(45deg)
    label
        position: relative
        cursor: pointer
        font-size: $fontSizeMedium
        &:before
            content:''
            -webkit-appearance: none
            background-color: transparent
            border: 2px solid #5CE397
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0px -15px 10px -12px rgba(0, 0, 0, 0.05)
            padding: 8px
            display: inline-block
            position: relative
            vertical-align: middle
            cursor: pointer
            margin-right: 5px
.container
    padding-top:30px
    margin-bottom: 30px
.container__title
    position: relative
.container__finish
    padding: 20px
    margin: 20%
    margin-top: 5%
    margin-bottom: 0px
    text-align: left
    .finish__order
        margin-top: 20px
        margin-bottom: 10px
        font-weight: bold
    .finish__info
        color: $colorDefault
    .finish__button
        background-color: transparent
        border: none
        padding-left: 25px
        text-decoration: none
        display: inline-block
        font-size: $fontSizeMedium
        cursor: pointer
        margin-top: 40px
        position: relative
        color: $colorDefault
    .finish__icon
        margin: 0
        position: absolute
        top: 50%
        -ms-transform: translateY(-50%)
        transform: translateY(-50%)
        left: 0px
.container__summary
    position: relative
    .list--start
        float: left
    .list--end
        float: right
    .list--hide
        visibility: hidden
    .summary__list
        margin-bottom: 30px
        .list__row
            padding-top: 5px
            padding-bottom: 10px
        .list__label
            color: $colorDefault
        .list__value
            color: $colorSuccess
            font-weight: bold
            font-size: $fontSizeBig
        .list__border
            border-top: 1px solid $colorDefault
            width: 100px
    .summary__list__price
        width:100%
        text-align: center
        .price__detail
            margin-bottom: 10px
        .price__detail__row
            height: 25px
        .price__total
            height: 24px
        .price__label
            color: $colorDefault
        .price__value
            font-weight: bold
        .price_button
            background-color: $colorPrimary
            border: none
            color: white
            padding: 15px 25px
            text-align: center
            text-decoration: none
            display: inline-block
            font-size: $fontSizeButton
            cursor: pointer
            width: 100%
            margin-top: 15px
.floating 
    position:relative
    margin-bottom:25px
    margin-right:15px
    color: $colorDefault
    padding-right: 30px
    border: 1px solid $colorDefault
.input--success
    border: 1px solid $colorSuccess
    color: $colorSuccess
.input--error
    border: 1px solid $colorPrimary
    color: $colorPrimary
.text--error
    color: $colorPrimary
.floating__help__text
    position: absolute
    left: 5px
    bottom: -15px
.floating__input__limit
    position: absolute
    right: 5px
    bottom: -15px
    font-size: bold
    color: $colorDefault
.floating__icon
    right: 14px
    margin: 0
    position: absolute
    top: 50%
    -ms-transform: translateY(-50%)
    transform: translateY(-50%)
.floating__label
    margin-top: 16px
    font-size: $fontSizeBig
    font-weight:normal
    position:absolute
    pointer-events:none
    left:15px
    top:-2px
    background:#fff
    transition:0.2s ease all
    -moz-transition:0.2s ease all
    -webkit-transition:0.2s ease all
.floating__label__textarea
    position:absolute
    pointer-events:none
    left:15px
    top:0px
    background-color: #fff
    height: 30px
    padding-top: 10px
    width: 90%
.floating__input 
    font-size: $fontSizeMedium
    display:block
    width:100%
    padding-top: 22px
    padding-bottom: 5px
    padding-left: 15px
    padding-right: 15px
    background: #fff
    font-weight: 600
    border: 0px solid #3D85D8
    border-radius: 4px
    box-sizing: border-box
    &:focus
        outline:none
        ~ .floating__label
            top:-8px
            font-size: $fontSizeDefault
.floating__input:not(:placeholder-shown) ~ .floating__label
    top:-8px
    font-size: $fontSizeDefault
.input--textarea
    margin-top: 10px
    overflow:hidden
.option__input
    height: 60px 
    margin-right: 15px 
    margin-bottom: 15px
    padding: 10px 
    padding-right: 15px 
    position: relative 
    border: 1px solid
    cursor: pointer
    .input__icon
        margin: 0
        position: absolute
        top: 50%
        -ms-transform: translateY(-50%)
        transform: translateY(-50%)
        right: 10px
    .input__text
        margin: 0
        position: absolute
        top: 50%
        -ms-transform: translateY(-50%)
        transform: translateY(-50%)
    .input__prize
        font-size: $fontSizeBig
        font-weight: bold
    .input--big
        font-size: $fontSizeBig
.option--select
    border: 2px solid $colorSuccess
    background-color: $colorSuccessLight
.summary--border
    padding-left: 15px
    border-left: 1px solid $colorPrimary
@media only screen and (max-width: 1110px)
    /* For small screen : */
    .summary--border
        padding-left: 0px
        border-left: 0px
    .checkbox__input 
        margin-top: 30px
    .list--hide
        visibility: visible
        display: none
    .floating 
        margin right 0px
    .option__input
        margin-right: 0px
    .container__finish
        padding: 0px
        margin: 0px
        margin-bottom: 20%
        margin-top: 10%